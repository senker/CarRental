@page
@model CarRental.Pages.CarList.CarModel
@{
    ViewData["Title"] = "Car";
}

<h1>Car list offered for selected days:</h1>

@if(Model.Cars.Count()>0)
{
    <br/><br/>
    <table class="table table-striped border">
        <tr class="table-secondary">
            <th>
                @Html.DisplayNameFor(m => m.Cars.FirstOrDefault().registrationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cars.FirstOrDefault().carModel)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cars.FirstOrDefault().carBrand)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cars.FirstOrDefault().dateOfProduction)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cars.FirstOrDefault().gearboxType)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cars.FirstOrDefault().numberOfDoors)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cars.FirstOrDefault().engineCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cars.FirstOrDefault().fuelType)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cars.FirstOrDefault().carColor)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cars.FirstOrDefault().carDescription)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cars.FirstOrDefault().carPrice)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cars.FirstOrDefault().carDeposit)
            </th>
        </tr>
        @foreach(var item in Model.Cars)
        {
        <tr>
            <td>
                @Html.DisplayFor(m => item.registrationNumber)
            </td>
            <td>
                @Html.DisplayFor(m => item.carModel)
            </td>
            <td>
                @Html.DisplayFor(m => item.carBrand)
            </td>
            <td>
                @Html.DisplayFor(m => item.dateOfProduction)
            </td>
            <td>
                @Html.DisplayFor(m => item.gearboxType)
            </td>
            <td>
                @Html.DisplayFor(m => item.numberOfDoors)
            </td>
            <td>
                @Html.DisplayFor(m => item.engineCapacity)
            </td>
            <td>
                @Html.DisplayFor(m => item.fuelType)
            </td>
            <td>
                @Html.DisplayFor(m => item.carColor)
            </td>
            <td>
                @Html.DisplayFor(m => item.carDescription)
            </td>
            <td>
                @Html.DisplayFor(m => item.carPrice)
            </td>
            <td>
                @Html.DisplayFor(m => item.carDeposit)
            </td>
        </tr>
        }
    </table>
}
else
{
    <p>
        No books available;
    </p>
}

